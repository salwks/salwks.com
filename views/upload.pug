extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="post", encType="multipart/form-data")
            label(for="videoFile") Video File
            input(type="file", id="videoFile", name="videoFile", required=true, accept="video/*")
            input(type="text", placeholder="Title", name="title", equired=true)
            textarea(placeholder="Description", name="description", required=true)
            input(type="submit", value="Upload Video")